# Environment variables for Kontext-Harmonise
# Copy this file to .env and fill in your actual values

# FAL.AI API Key - Get from https://fal.ai/dashboard/keys
FAL_KEY=your_fal_api_key_here

# Gradio Server Configuration
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false
GRADIO_DEBUG=false

# Optional: Custom output directory (default: output)
# OUTPUT_DIR=custom_output_folder

# Optional: Custom gallery settings
# GALLERY_COLUMNS=3
# GALLERY_HEIGHT=400px

# Optional: File size limits (default: 50MB)
# MAX_FILE_SIZE=50MB

# Optional: Authentication (uncomment to enable)
# GRADIO_AUTH_USERNAME=admin
# GRADIO_AUTH_PASSWORD=your_secure_password